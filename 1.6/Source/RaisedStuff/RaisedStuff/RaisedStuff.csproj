<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>RaisedStuff</RootNamespace>
    <AssemblyName>RaisedStuff</AssemblyName>
    <LangVersion>latest</LangVersion>
    <Platforms>AnyCPU</Platforms>
    <Deterministic>true</Deterministic>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Lib.Harmony" Version="2.4.1" ExcludeAssets="runtime" />
    <PackageReference Include="Krafs.Rimworld.Ref" Version="1.6.4566" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="scraps.txt" />
  </ItemGroup>
  <Target Name="CopyToOutput" AfterTargets="Build">
    <MakeDir Directories="$(MSBuildProjectDirectory)/../../../output/Raised-Platforms/Assemblies" />
    <Copy SourceFiles="$(TargetDir)RaisedStuff.dll" DestinationFiles="$(MSBuildProjectDirectory)/../../../output/Raised-Platforms/Assemblies/RaisedStuff.dll" SkipUnchangedFiles="true" />
  </Target>
</Project>