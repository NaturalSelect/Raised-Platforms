      <Steel>80</Steel>
    </costList>
    <size>(2,2)</size>
  </ThingDef>

  <ThingDef ParentName="MJ_RaisedStuff_PlatformBase">
    <defName>MJ_RaisedStuff_Platform1x1c</defName>
    <label>tiny platform</label>
    <graphicData>
      <texPath>Things/Building/Platform/RaisedPlatform1x1c</texPath>
      <drawSize>(1,1.5)</drawSize>
    </graphicData>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
